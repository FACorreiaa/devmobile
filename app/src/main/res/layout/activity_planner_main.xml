<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGroundBrown"
    android:orientation="vertical"
    tools:context=".activity.PlannerMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@color/colorBright"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="false"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/logo_geral" />

        <LinearLayout
            android:id="@+id/linearTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.6"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/cadastroid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Universidade:" />

            <TextView
                android:id="@+id/disciplina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disciplina:" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_inter_direito"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mostraUniversidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="IPCA - Instituto Politecnico do Cavado"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mostraDisciplina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Programação Dispositivos"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/topNavigation"
        layout="@layout/top_register_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorBackGroundBrown" />

    <FrameLayout
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/bottom_register_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

</LinearLayout>