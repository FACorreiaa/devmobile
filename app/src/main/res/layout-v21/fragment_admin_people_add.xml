<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.StudentAddFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/backToPrevious"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_seta_voltar_24dp"
                android:gravity="center"
                android:text="BACK TO ADMIN PEOPLE MAIN SCREEN"
                android:textColor="@color/colorButtonNewBrown"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Admin People"
                        android:textColor="@color/colorGray"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/adminPeopleName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:ems="10"
                    android:hint="first name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="@color/colorLightGray"
                    android:textSize="14sp"
                    android:theme="@style/editTextPadrao" />

                <EditText
                    android:id="@+id/adminPeopleLastName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:ems="10"
                    android:hint="last name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="@color/colorLightGray"
                    android:textSize="14sp"
                    android:theme="@style/editTextPadrao" />

                <EditText
                    android:id="@+id/adminPeopleEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:ems="10"
                    android:hint="email"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="@color/colorLightGray"
                    android:textSize="14sp"
                    android:theme="@style/editTextPadrao" />

                <Button
                    android:id="@+id/buttonAdminPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="ADD"
                    android:theme="@style/botaoPadraoBrown" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>